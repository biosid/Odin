<!DOCTYPE html>
<html ng-app="OdinUI">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Odin Single Page Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <link href="//kendo.cdn.telerik.com/2016.3.1118/styles/kendo.common-fiori.min.css" rel="stylesheet" />
    <link href="//kendo.cdn.telerik.com/2016.3.1118/styles/kendo.rtl.min.css" rel="stylesheet" />
    <link href="//kendo.cdn.telerik.com/2016.3.1118/styles/kendo.fiori.min.css" rel="stylesheet" />
    <link href="//kendo.cdn.telerik.com/2016.3.1118/styles/kendo.fiori.mobile.min.css" rel="stylesheet" />


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Odin Single Page Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Odin Single Page Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angular-plugins")
    @Scripts.Render("~/bundles/app")

    <script src="//kendo.cdn.telerik.com/2016.3.1118/js/kendo.all.min.js"></script>
    <script src="//kendo.cdn.telerik.com/2016.3.1118/js/kendo.timezones.min.js"></script>

</body>
</html>
